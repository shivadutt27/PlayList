package playlist;

import java.util.ArrayList;
import java.util.List;

public class Song {
	
	private String title;
	private String duration;
	private List<Song> songs;
	
	public Song(String title, String duration)
	{
		this.title = title;
		this.duration = duration;
		this.songs = new ArrayList<>();
		this.songs.add(new Song(this.duration,this.title));
	}
	
	public boolean addSong(Song song)
	{
		if(findSong(song)<0 || songs.isEmpty())
		{
			return songs.add(song);	
		}
		else
		{
			System.out.println("Song --> " + song + "already present");
			return false;
		}
	}
	
	private int findSong(Song song)
	{
		return songs.indexOf(song);
	}
	
	public Song findSong(String title)
	{
		Song getSong = null;
		for(Song oneSong : songs)
		{
			if(oneSong.getTitle().equals(title))
			{
				getSong = oneSong;
			}
		}
		return getSong;
	}
	
	
	
	private void setTitle(String title)
	{
		this.title = title;
	}
	
	public String getTitle()
	{
		return this.title;
	}
	
	private void setDuration(String duration)
	{
		this.duration = duration;
	}
	
	public String getDuration()
	{
		return this.duration;
	}
}
