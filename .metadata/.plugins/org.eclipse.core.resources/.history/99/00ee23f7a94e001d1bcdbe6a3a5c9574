package playlist;

import java.util.ArrayList;
import java.util.List;

public class Album {
	
	private String albumName;
	private List<Song> songs;
	private List<Album> albums;
	
	public Album(String albumName, String title, String duration)
	{
		this.albumName = albumName;
		Song songObj = new Song(title,duration);
		this.songs = new ArrayList<>();
		this.albums = new ArrayList<>();
		this.addSong(songObj);
	}
	
	private int findSong(Song song) {return albums.indexOf(song);}
	
	
	private boolean addSong(Song song)
	{
		if(!this.albums.isEmpty() && findSong(song)<0 || this.songs.isEmpty())
		{
			return this.albums.add(song);
		}else {
			System.out.println("Song "+song+" is already present");
			return false;
		}
	}

	public String getAlbumName() {
		return albumName;
	}

	public void setAlbumName(String albumName) {
		this.albumName = albumName;
	}

	public List<Song> getSongs() {
		return songs;
	}

	public void setSongs(List<Song> songs) {
		this.songs = songs;
	}
	
	
	
	
	
	

}
